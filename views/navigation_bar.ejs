    <!-- top navbar -->
    <!-- Search input  -->
    <div class=" containersearch">
        <form action="/search" method="post" id="searchBar">
            <div class="input-group mb-3 px-5 mt-4">
                <input value="" name="searchWord" type="text" class="form-control searchinput" placeholder="Searching..">
                <button class="btn btn-success col-2 searchbtn" type="submit" onclick="$('#searchBar').submit()"><i class="bi bi-search"></i></button>
            </div>
        </form>
    </div>

    <!-- dropdown menu  -->
    <div class="row mr-2 " >
        <a href="/cart" class="btn col-6"><i class="bi bi-cart-plus"></i></a>
        <div class="cart col-6">
            <!-- Cart Button -->
            <button class="header_img dropdown-toggle d-inline-block" data-toggle="dropdown" aria-expanded="false"
                id="dropdownMenuLink">
                <% if(user.img.contentType==''){ %>
                    <img src="images/user_icon.png">
                <% }else { %>
                    <img src="data:image/<%= user.img.contentType %>;base64,<%= user.img.data.toString('base64') %>">
                <% } %>
            </button>
            <ul class="dropdown-menu col-md-5 col-lg-2 text-right" aria-labelledby="dropdownMenuLink">
                <button class="btn btn-success dropdown-item signinbtn"
                    onclick="window.location.href='/main'">Home Page</button>
                <li><a class="dropdown-item h5" href="/profile">Your Profile</a></li>
                <% if (user.admin == true){ %>
                    <li><a class="dropdown-item h5" href="/addProduct">Add Product</a></li>
                <% } %>
                <li><a class="dropdown-item h5" href="/cart">View cart</a></li>
                <li><a class="dropdown-item h5" href="/signOut">Sign Out</a></li>
